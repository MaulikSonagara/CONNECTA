<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Skill Title -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <EditText
        android:id="@+id/edit_skill_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Skill Title"
        android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Skill Description -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <EditText
        android:id="@+id/edit_skill_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Skill Description"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Skill Level Dropdown -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill Level"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />
    <Spinner
        android:id="@+id/skill_level_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <!-- Experience Level Dropdown -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience Level"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />
    <Spinner
        android:id="@+id/experience_level_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <!-- Remove Skill Button -->
    <Button
        android:id="@+id/remove_skill_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Skill"
        android:layout_gravity="end"
        android:layout_marginTop="8dp" />

</LinearLayout>