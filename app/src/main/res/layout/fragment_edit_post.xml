<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Post Type (Read-only) -->
    <TextView
        android:id="@+id/post_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <!-- Caption for General Post -->
    <EditText
        android:id="@+id/post_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter caption"
        android:visibility="gone" />

    <!-- Image Picker for General Post -->
    <Button
        android:id="@+id/image_picker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Image"
        android:visibility="gone" />

    <!-- Question for Doubt/Quiz Post -->
    <EditText
        android:id="@+id/post_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter question"
        android:visibility="gone" />

    <!-- Options for Quiz Post -->
    <EditText
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Option 1"
        android:visibility="gone" />
    <EditText
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Option 2"
        android:visibility="gone" />
    <EditText
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Option 3"
        android:visibility="gone" />
    <EditText
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Option 4"
        android:visibility="gone" />

    <!-- Correct Answer for Quiz Post -->
    <Spinner
        android:id="@+id/correct_answer_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- Skill Tags -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill Tags"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/skill_tags_chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:chipSpacing="4dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/skill_tag_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add skill tag">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/skill_tag_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/add_skill_tag_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Tag"
        android:layout_marginTop="4dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/save_post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:layout_marginTop="16dp" />

</LinearLayout>